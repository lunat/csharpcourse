<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href = "https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
    <title>@ViewBag.Title - @ViewBag.Pippo</title>
</head>
<body>
<div class="container">
    @RenderBody()
    <hr/>
    <footer>
            <p>Copyright &copy; 2022 - @ViewData["Title"] @ViewData["Pippo"]</p>
    </footer>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" rel="stylesheet" crossorigin="anonymous">
